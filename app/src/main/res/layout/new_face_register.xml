<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bttm_sheet_bg"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:background="?selectableItemBackgroundBorderless"
            android:id="@+id/bt_close"
            android:layout_height="?actionBarSize"
            android:layout_width="?actionBarSize"
            app:srcCompat="@drawable/ic_chevron_left" />

        <TextView
            android:id="@+id/actTitle"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="New Employee"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:fontFamily="sans-serif-medium"/>
<!--        <ImageButton-->
<!--            android:id="@+id/create_event_btn"-->
<!--            android:background="?selectableItemBackgroundBorderless"-->
<!--            android:layout_height="?actionBarSize"-->
<!--            android:layout_width="?actionBarSize"-->
<!--            app:srcCompat="@drawable/ic_done" />-->

    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:fillViewport="true"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:scrollingCache="true">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_xxlarge"
            android:paddingLeft="@dimen/spacing_mxlarge"
            android:paddingRight="@dimen/spacing_mxlarge"
            android:paddingTop="@dimen/spacing_medium">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageCard"
                android:layout_alignParentStart="true"
                app:cardCornerRadius="25dp">
                <ImageView
                    android:id="@+id/facePreviewImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_width="wrap_content"
                android:text="First name"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_width="fill_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Fname"
                    android:background="@drawable/edit_text_round_bg_outline"
                    android:hint="First name"
                    android:imeOptions="actionNext"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_width="wrap_content"
                android:text="Middle name"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_width="fill_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/midname"
                    android:background="@drawable/edit_text_round_bg_outline"
                    android:hint="Middle name"
                    android:imeOptions="actionDone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"/>


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_width="wrap_content"
                android:text="Last name"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_width="fill_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lname"
                    android:background="@drawable/edit_text_round_bg_outline"
                    android:hint="last name"
                    android:imeOptions="actionNext"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_width="wrap_content"
                android:text="Email"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="Email"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_width="fill_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:background="@drawable/edit_text_round_bg_outline"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_width="wrap_content"
                android:textColor="@color/grey_40"
                android:text="Schedule"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>
            <FrameLayout
                android:background="@drawable/edit_text_round_bg_outline"
                android:layout_marginTop="@dimen/spacing_medium"
                android:padding="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_gravity="left|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Morning"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:textColor="@color/grey_40"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/mornChipIn"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="IN - 8:00 AM"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/mornChipOut"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="OUT - 12:00 PM"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_40"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_gravity="right|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Afternoon"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:textColor="@color/grey_40"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/noonChipIn"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="IN - 1:00 PM"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/noonChipOut"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="OUT - 5:00 PM"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>
                </LinearLayout>

            </FrameLayout>
            <com.google.android.material.button.MaterialButton
                android:text="Save"
                android:textColor="@color/colorPrimary"
                android:id="@+id/conBtn"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_margin="@dimen/spacing_middle"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>